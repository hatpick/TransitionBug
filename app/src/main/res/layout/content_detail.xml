<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:layout_margin="5dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/activity_detail"
    tools:context=".DetailActivity">
    <ImageView
        android:transitionName="ItemBackground"
        android:id="@+id/detail_item_bg"
        android:scaleType="fitEnd"
        android:layout_width="match_parent"
        android:layout_height="250dp" />
    <TextView
        android:transitionName="ItemName"
        android:textColor="#fff"
        android:background="@drawable/shadow_bg"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:padding="5dp"
        android:id="@+id/detail_item_name"
        android:layout_width="match_parent"
        android:layout_height="60dp" />
</FrameLayout>