<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="5dp" android:layout_marginTop="5dp"
    android:background="?android:attr/selectableItemBackground" android:id="@+id/item_holder"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView
        android:transitionName="ItemBackground"
        android:id="@+id/item_bg"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="180dp" />
    <TextView
        android:transitionName="ItemName"
        android:textColor="#fff"
        android:background="@drawable/shadow_bg"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:padding="5dp"
        android:id="@+id/item_name"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</FrameLayout>